
  <div class="row">
    <div class="col-12 top-bar text-center">
      <h2><%= @profile.first_name %></h2>
      <i class="fa fa-times fa-2x text-muted float-right" id="close-conversation"></i>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <div id="initiate-converation">
        <p class="mt-3">You matched with <span><%= @profile.first_name %></span> <%= time_ago_in_words @match.created_at %> ago.</p>
        <%= link_to image_tag(@profile.images.first, width: "400px", height: "400px", class: "relative rounded mt-2 mb-2"), "#" %>

        <p>Send them a message.</p>
      </div>

      <div id="conversation_messages"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 mt-5 botton-bar">
      <%= render partial: "browse/new_conversation" %>
    </div>
  </div>
