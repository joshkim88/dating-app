<div class="row">
  <div class="col-md-3 bg-white">
    <!-- Banner for the left side profile bar -->
    <div>
      <%= render "layouts/profile_bar" %>
    </div>

    <!--    These are the tabs for messages and matches. -->
    <ul class="nav nav-dating-sidebar ml-4 mt-3 mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Matches</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-profile" aria-selected="false">DMs</a>
      </li>

    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane ml-2 fade" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= render "browse/matches" %>
      </div>
      <div class="tab-pane ml-2 fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <p>You have no messages yet.</p>
        </div>
      </div>
      <div class="tab-pane ml-2 fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <p>Your Name</p>
          <p>Age</p>
          <p>Bio</p>
          <p>City</p>

        </div>
      </div>
    </div>
  </div>
  <!-- This is the slideshow that shows potential matches. -->
  <div class="col-9 col-md-9">
    <ul id="slides">
      <% @users.each_with_index do |user, i| %>
        <li class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
          <div class="image-carousel " style="background-image: url('<%= url_for user.images.first %>')">
          </div>
          <div class="user-details">
            <span class="user-name"> <%= user.first_name %></span>, 31<br />
            <i class="fa fa-graduation-cap mr-1"></i> job/studies<br />
            <i class="fa fa-map-marker mr-2"></i> location
          </div>
        </li>
      <% end %>
    </ul>

    <div id="slide-controls">
      <span class="controls" id="decline"><i class="fa fa-times-circle fa-2x"></i></span>
      <span class="controls" id="approve"><i class="fa fa-heart fa-2x"></i></span>
    </div>
  </div>
</div>
